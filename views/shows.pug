extends layout

block layout-content
	div.View.WelcomeView
		h1.Banner Fallalytics
		div.MessagesFlex
			div.Message2 Status: 
				if botStatus
					span.dot.green
				else
					span.dot.red
			div.Message2 Rounds: #{amount}
			div.Message2 
				a(href="/about") About
		div.Message
			div.Title
				h4(style="display:inline-block") Shows: 
				each showi in currentShows
					a(href="./"+showi.id)
						- if (show.id == showi.id)
							button.btn.btn-secondary(style="margin:5px") #{showi.displayName}
						- if(show.id != showi.id)
							button.btn.btn-outline-secondary(style="margin:5px") #{showi.displayName}
				h5(style="margin-top:5px") Round distribution #{show.displayName} last 7 days
			div.desktopList
				each round in rounds
					div.row
						h6(style="margin-top:5px;") Round #{round.index}
					div.row.bottomborder
						each entry in round.array
							div.col
								div(style="display:inline-block; background-repeat: no-repeat; background-position: center; height:80px; width: 50%; max-width: 75px; background-size: 75px; background-image:url('"+entry.medal+"')")
									div(style="background-repeat: no-repeat; background-position: center; height:80px; width: 100%; background-size: 50px; background-image:url('"+entry.icon+"')")
								div(style="display:inline-block; margin: 5px;") 
									span #{entry.name}
									div.roundType(class=entry.type) #{entry.type}
									span Season #{entry.season}
									br
									span #{entry.percentage}% Chance
								
			div.mobileList
				each round in rounds
					div.row
						h5(style="margin-top:5px;") Round #{round.index}
					div.row.bottomborder
						div.col-2
							div(style="margin:5px; display:inline-block;")
								span 1st
							br
							div(style="margin:5px; display:inline-block;")
								span 2nd
							br
							div(style="margin:5px; display:inline-block;")
								span 3rd
							br
							div(style="margin:5px; display:inline-block;")
								span 4th
							br
							div(style="margin:5px; display:inline-block;")
								span 5th
						div.col-10
							each entry in round.array
								div(style="display:inline-block; background-repeat: no-repeat; background-position: center; height:20px; width: 20px; background-size: 20px; background-image:url('"+entry.medal+"')")
									div(style="background-repeat: no-repeat; background-position: center; height:100%; width: 100%; background-size: 15px; background-image:url('"+entry.icon+"')")
								div(style="display:inline-block; margin: 5px;") 
									span #{entry.name} - #{entry.percentage}% Chance
								br
			br
			span 
				strong Site is not affiliated with Epic, Mediatonic or Fall Guys. All components of this service follows the Fall Guys EULA
		div
		div.NavButtons
			a(href="/")
				div.NavButton Go Back